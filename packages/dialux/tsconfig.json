{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015", "dom"],
    "target": "es2018",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["index.tsx"],
  "exclude": ["node_modules", "dist"]
}

